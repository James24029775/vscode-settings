{
  /// ========== Visuals ==========
  "workbench.colorTheme": "Catppuccin Mocha", // color theme
  "workbench.editor.tabActionLocation": "left", // location of tab action's button
  "workbench.sideBar.location": "left", // location of side bar
  "workbench.iconTheme": "catppuccin-mocha", // icon theme
  "workbench.list.smoothScrolling": true,
  "workbench.productIconTheme": "icons-carbon", // product icon theme(i.e. the icons on the side bar)
  "workbench.startupEditor": "newUntitledFile", // create an untitiled file when open a new window
  "workbench.tree.indent": 10, // indentation length for file list.
  "window.autoDetectColorScheme": false,
  /// ========== Editor ==========
  "editor.cursorSmoothCaretAnimation": "on", // make cursor have animation
  "editor.fontFamily": "Input Mono, monospace",
  "editor.renderWhitespace": "boundary", // render whitespace at start and end of a line
  "editor.lineNumbers": "interval", // show line numbers every 10 lines.
  "editor.guides.bracketPairs": "active",
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.find.addExtraSpaceOnTop": false, // whether keep space for find widget
  "editor.inlineSuggest.enabled": true,
  "editor.multiCursorModifier": "ctrlCmd", // holding ctrl button can start multi cursor modifier
  "editor.suggestSelection": "first",
  "editor.tabSize": 4,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.stickyScroll.enabled": true,
  "editor.hover.sticky": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  /// ========== Files ==========
  "files.autoSave": "afterDelay",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // unknown!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.untrackedChanges": "separate",
  "scm.diffDecorationsGutterWidth": 2,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.enabled": true,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 5,
  /// ========== SSH ==========
  "remote.SSH.remotePlatform": {
    "core": "linux",
    "root": "linux",
    "dpdk-server": "linux",
    "5gc": "linux",
    "ue": "linux",
    "140.113.207.248": "linux",
    "140.113.87.11": "linux",
    "SDN-NFV": "linux",
    "DPDK-Server": "linux",
    "DPDK-GNB": "linux",
    "DPDK-CN": "linux",
    "140.113.24.246": "linux",
    "GPU-Server": "linux",
    "DPDK-Server1": "linux"
  },
  "json.schemas": [],
  "scm.inputMaxLineCount": 5,
  "terminal.integrated.tabs.defaultColor": "terminal.ansiMagenta",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
}
